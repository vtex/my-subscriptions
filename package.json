{
  "version": "0.11.0",
  "devDependencies": {
    "@vtex/danger": "0.0.1-beta.4",
    "@vtex/intl-equalizer": "^2.0.1",
    "eslint": "^6.0.1",
    "eslint-config-vtex-react": "^4.1.0",
    "husky": "^1.3.1"
  },
  "scripts": {
    "lint": "cd ./react && yarn lint",
    "test": "cd ./react && yarn test",
    "lint:locales": "intl-equalizer",
    "locales:fix": "intl-equalizer --fix",
    "verify": "yarn lint && yarn lint:locales && yarn test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn lint:locales && yarn locales:fix",
      "pre-push": "yarn verify"
    }
  },
  "intl-equalizer": {
    "localeDirectory": "react/locales/"
  }
}
