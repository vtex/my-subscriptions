{
  "version": "1.3.0",
  "devDependencies": {
    "@vtex/intl-equalizer": "^2.0.1",
    "husky": "^1.3.1"
  },
  "scripts": {
    "lint:messages": "intl-equalizer"
  },
  "husky": {
    "hooks": {
      "pre-commit": "cd ./react && yarn lint",
      "pre-push": "cd ./react && yarn test && yarn lint"
    }
  },
  "intl-equalizer": {
    "localeDirectory": "react/locales/"
  }
}
